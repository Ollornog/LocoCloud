services:
  calcom:
    image: {{ calcom_image }}
    container_name: calcom
    restart: unless-stopped
    ports:
      - "{{ '127.0.0.1' if 'gateway' in server_roles else '0.0.0.0' }}:{{ calcom_port }}:3000"
    env_file:
      - .env
    depends_on:
      - calcom-db
    labels:
      - "com.centurylinklabs.watchtower.enable=true"

  calcom-db:
    image: {{ calcom_db_image }}
    container_name: calcom-db
    restart: unless-stopped
    volumes:
      - {{ calcom_stack_path }}/db:/var/lib/postgresql
    environment:
      POSTGRES_DB: {{ calcom_db_name }}
      POSTGRES_USER: {{ calcom_db_user }}
      POSTGRES_PASSWORD: {{ calcom_db_password }}
