NEXTAUTH_URL=https://{{ documenso_domain }}
NEXTAUTH_SECRET={{ lookup('password', '/dev/null chars=ascii_letters,digits length=32') }}
NEXT_PRIVATE_DATABASE_URL=postgresql://{{ documenso_db_user }}:{{ documenso_db_password }}@documenso-db:5432/{{ documenso_db_name }}
NEXT_PUBLIC_WEBAPP_URL=https://{{ documenso_domain }}
{% if documenso_signing_cert_path | length > 0 %}
NEXT_PRIVATE_SIGNING_LOCAL_FILE_PATH={{ documenso_signing_cert_path }}
{% endif %}
{% if documenso_oidc_enabled and documenso_oidc_client_id | length > 0 %}
# OIDC Configuration
NEXT_PRIVATE_OIDC_WELL_KNOWN={{ documenso_oidc_provider_url }}/.well-known/openid-configuration
NEXT_PRIVATE_OIDC_CLIENT_ID={{ documenso_oidc_client_id }}
NEXT_PRIVATE_OIDC_CLIENT_SECRET={{ documenso_oidc_client_secret }}
NEXT_PRIVATE_OIDC_PROVIDER_LABEL=PocketID
{% endif %}
