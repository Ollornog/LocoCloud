SECRET_KEY={{ outline_secret_key }}
UTILS_SECRET={{ outline_utils_secret }}
DATABASE_URL=postgres://{{ outline_db_user }}:{{ outline_db_password }}@outline-db:5432/{{ outline_db_name }}
REDIS_URL=redis://outline-redis:6379/{{ outline_redis_db }}
URL=https://{{ outline_domain }}
FILE_STORAGE=local
FILE_STORAGE_LOCAL_ROOT_DIR=/var/lib/outline/data
{% if outline_oidc_enabled and outline_oidc_client_id | length > 0 %}
OIDC_CLIENT_ID={{ outline_oidc_client_id }}
OIDC_CLIENT_SECRET={{ outline_oidc_client_secret }}
OIDC_AUTH_URI={{ outline_oidc_provider_url }}/authorize
OIDC_TOKEN_URI={{ outline_oidc_provider_url }}/token
OIDC_USERINFO_URI={{ outline_oidc_provider_url }}/userinfo
OIDC_DISPLAY_NAME=PocketID
OIDC_SCOPES=openid profile email
{% endif %}
{% if outline_smtp_host | length > 0 %}
SMTP_HOST={{ outline_smtp_host }}
SMTP_PORT={{ outline_smtp_port }}
SMTP_USERNAME={{ outline_smtp_user }}
SMTP_FROM_EMAIL={{ outline_smtp_from }}
{% endif %}
