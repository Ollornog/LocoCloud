NEXTCLOUD_TRUSTED_DOMAINS={{ nextcloud_domain }}
NEXTCLOUD_TRUSTED_PROXIES=127.0.0.1
OVERWRITEPROTOCOL=https
OVERWRITECLIURL=https://{{ nextcloud_domain }}
MYSQL_HOST=nextcloud-db
MYSQL_DATABASE={{ nextcloud_db_name }}
MYSQL_USER={{ nextcloud_db_user }}
MYSQL_PASSWORD={{ nextcloud_db_password }}
REDIS_HOST=nextcloud-redis
REDIS_HOST_PORT=6379
NEXTCLOUD_ADMIN_USER={{ nextcloud_admin_user }}
NEXTCLOUD_ADMIN_PASSWORD={{ nextcloud_admin_password }}
{% if nextcloud_smtp_host | length > 0 %}
SMTP_HOST={{ nextcloud_smtp_host }}
SMTP_PORT={{ nextcloud_smtp_port }}
SMTP_AUTHTYPE=LOGIN
SMTP_NAME={{ nextcloud_smtp_user }}
MAIL_FROM_ADDRESS={{ nextcloud_smtp_from | regex_replace('@.*', '') }}
MAIL_DOMAIN={{ nextcloud_smtp_from | regex_replace('^[^@]+@', '') }}
{% endif %}
